<div class="card mt-2">
  <div class="card-header d-flex justify-content-between">
    <h3>Acomodações</h3>
    <%= link_to 'Nova Acomodação', new_acomodacao_path, class: 'btn btn-success' %>
  </div>
  <div class="card-body">
    <% if @acomodacoes.empty? %>
      <div class="alert alert-warning">Não existem acomodações cadastradas.</div>
    <% else %>
      <%= render partial: 'acomodacoes/acomodacoes', locals: { acomodacoes: @acomodacoes } %>
    <% end %>
  </div>
</div>