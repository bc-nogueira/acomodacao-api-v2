<%= form_with model: acomodacao do |f| %>
  <div class="card-body">
    <div class="form-group">
      <%= f.label :titulo %>
      <%= f.text_field :titulo, class: 'form-control' %>
    </div>
    <div class="form-group row">
      <div class="col">
        <%= f.label :capacidade %>
        <%= f.number_field :capacidade, min: 1, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :preco, 'Preço' %>
        <%= f.number_field :preco, min: 0, step: 0.1, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :tipo %>
        <%= f.select :tipo, [['Apartamento', 0], ['Casa', 1], ['Hotel', 2]], {}, { class: 'form-control' } %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-8">
        <%= f.label :logradouro %>
        <%= f.text_field :logradouro, class: 'form-control' %>
      </div>
      <div class="col-2">
        <%= f.label :numero, 'Número' %>
        <%= f.text_field :numero, class: 'form-control' %>
      </div>
      <div class="col-2">
        <%= f.label :complemento %>
        <%= f.text_field :complemento, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col">
        <%= f.label :bairro %>
        <%= f.text_field :bairro, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :cidade %>
        <%= f.text_field :cidade, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.label :estado %>
        <%= f.text_field :estado, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :descricao %>
      <%= f.text_area :descricao, class: 'form-control' %>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between">
    <%= f.submit 'Salvar', class: 'btn btn-success' %>
    <%= link_to 'Listagem', acomodacoes_path, class: 'btn btn-secondary' %>
  </div>
<% end %>